rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isPHCStaff() {
      return isAuthenticated() && 
        (getUserData().role == 'phc' || getUserData().role == 'admin');
    }
    
    function isASHA() {
      return isAuthenticated() && getUserData().role == 'asha';
    }
    
    // Patient collection rules
    match /patients/{patientId} {
      allow read: if isAuthenticated();
      allow create, update: if isASHA() || isPHCStaff();
      allow delete: if isPHCStaff();
    }
    
    // Visits collection rules
    match /visits/{visitId} {
      allow read: if isAuthenticated();
      allow create, update: if isASHA() || isPHCStaff();
      allow delete: if isPHCStaff();
    }
    
    // Vaccinations collection rules
    match /vaccinations/{vaccinationId} {
      allow read: if isAuthenticated();
      allow write: if isASHA() || isPHCStaff();
    }
    
    // User profiles collection
    match /users/{userId} {
      // Allow users to read all user docs (needed for role checking)
      // and write their own user document
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}