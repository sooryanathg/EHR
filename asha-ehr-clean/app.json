{
  "expo": {
    "name": "Asha EHR",
    "slug": "asha-ehr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone for voice input in medical records.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to transcribe your voice into text for medical documentation."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.nexus.ashaehr",
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-sqlite",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff",
          "sounds": [
            "./assets/notification.wav"
          ]
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow Asha EHR to access your microphone for voice input in medical records.",
          "speechRecognitionPermission": "Allow Asha EHR to use speech recognition for transcribing medical documentation."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "3fee5cef-79a3-4e30-a38a-aa5d308721e5"
      }
    }
  }
}